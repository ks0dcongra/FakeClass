<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">登入</h1>
</div>
<form class="form-signin" action="/signin" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="email">Email</label>
    <input class="form-control" id="email" type="text" name="email" class="form-control" placeholder="Email" required
      autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">密碼</label>
    <input class="form-control" id="password" type="password" name="password" class="form-control"
      placeholder="Password" required>
  </div>
  <div class="row">
    <button class="col-3 btn btn-primary btn-block mx-auto" type="submit">提交</button>
  </div>
</form>
<div class="mt-2 text-center">
  <p><a class="btn btn-info" href="/signup">註冊</a></p>
</div>